<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/info_image"
        android:layout_width="@dimen/info_image_width"
        android:layout_height="@dimen/info_image_height"
        android:contentDescription="@string/desc_room_img"
        android:background="@color/light_gray"
        tools:src="@color/light_gray"
        />
    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_snippet_height"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_regular"
        android:textStyle="bold"
        android:maxLines="2"
        android:paddingTop="8dp"
        android:layout_gravity="bottom"
        tools:text="Snippet text that is probably pretty long for one line"
        />
</LinearLayout>